<?xml version="1.0" encoding="UTF-8"?>

<plugin xmlns="http://apache.org/cordova/ns/plugins/1.0"
    id="cordova-plugin-dfu"
    version="1.0.0">
    <name>Cordova Plugin for DFU</name>
    <description></description>
    <license>MIT</license>
    <keywords></keywords>
    <repo>https://github.com/arisi/cordova-plugin-dfu.git</repo>
    <issue>https://github.com/arisi/cordova-plugin-dfu/issues</issue>

    <!-- android -->
    <platform name="android">
      <js-module src="www/plugin.js" name="plugin">
        <runs/>

        <!-- This is the window variable name you want, like window.MyCordovaPlugin -->
        <clobbers target="cordovaPluginDfu" />
      </js-module>
      <config-file target="res/xml/config.xml" parent="/*">
        <feature name="cordovaPluginDfu">
          <param name="android-package" value="com.example.MyCordovaPlugin" />
          <param name="onload" value="true" />
        </feature>
      </config-file>

      <source-file src="src/android/com/example/MyCordovaPlugin.java" target-dir="src/com/example/" />
    </platform>

</plugin>
